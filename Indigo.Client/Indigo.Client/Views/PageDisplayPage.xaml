<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Indigo.Client.Views.PageDisplayPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="NameEntry" HorizontalOptions="CenterAndExpand" Placeholder="Enter page name here" Text="{Binding PageName, Mode=OneWayToSource}"/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                <Label Text="Last Edited: "/>
                <Label Text="{Binding LastEdited, Converter=}"/>
            </StackLayout>
            <Editor VerticalOptions="FillAndExpand" Keyboard="Chat" Text="{Binding PageMessage, Mode=TwoWay}}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>