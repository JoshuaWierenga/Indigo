<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Indigo.Client.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10*"/>
                    <ColumnDefinition Width="20*" />
                    <ColumnDefinition Width="40*" />
                    <ColumnDefinition Width="20*" />
                    <ColumnDefinition Width="10*" />
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="2" Text="Login" FontSize="Large" VerticalOptions="Center" HorizontalOptions="Center"/>
                <Entry Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding User.Username, Mode=OneWayToSource}" Placeholder="Username" />
                <Entry Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" IsPassword="True" Text="{Binding User.PasswordHash, Mode=OneWayToSource}" Placeholder="Password" />
                <Button Grid.Row="3" Grid.Column="2" Text="Login" Pressed="Login_Clicked" HorizontalOptions="Fill"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>