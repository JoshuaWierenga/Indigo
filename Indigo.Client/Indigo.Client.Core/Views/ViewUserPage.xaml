<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Indigo.Client.Core.Views.ViewUserPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Edit" Clicked="OnEditButtonPressed" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Username" FontSize="Medium" />
            <Label Text="{Binding user.Username}" FontSize="Small" />
            <Label Text="Password" FontSize="Medium" />
            <Label Text="{Binding user.PasswordHash}" FontSize="Small"/>
            <Label Text="Email" FontSize="Medium" />
            <Label Text="{Binding user.Email}" FontSize="Small" />
            </StackLayout>
    </ContentPage.Content>
</ContentPage>