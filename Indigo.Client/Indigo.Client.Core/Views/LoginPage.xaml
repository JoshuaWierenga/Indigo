<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Indigo.Client.Core.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Login" FontSize="Large" VerticalOptions="Center" HorizontalOptions="Center"/>
            <Entry  Text="{Binding User.Username, Mode=OneWayToSource}" Placeholder="Username" />
            <Entry Text="{Binding User.PasswordHash, Mode=OneWayToSource}" Placeholder="Password" />
            <Button Text="Login" HorizontalOptions="Center" Pressed="Login_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>