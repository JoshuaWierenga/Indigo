<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Indigo.Client.Core.Views.ModifyUserPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="{Binding SaveText}" Clicked="Finish_Clicked" Icon="addicon.png" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <StackLayout Orientation="Horizontal">
                <Label Text="Username" FontSize="Medium" />
                <Label Text="{Binding UsernameText}" FontSize="Medium" TextColor="Red"/>
            </StackLayout>
            <Entry Text="{Binding user.Username, Mode=TwoWay}" FontSize="Small" />
            <StackLayout Orientation="Horizontal">
                <Label Text="Password" FontSize="Medium" />
                <Label Text="{Binding PasswordHashText}" FontSize="Medium" TextColor="Red"/>
            </StackLayout>
            <Entry Text="{Binding user.PasswordHash, Mode=TwoWay}" FontSize="Small"/>
            <StackLayout Orientation="Horizontal">
                <Label Text="Email" FontSize="Medium" />
                <Label Text="{Binding EmailText}" FontSize="Medium" TextColor="Red"/>
            </StackLayout>
            <Entry Text="{Binding user.Email, Mode=TwoWay}" FontSize="Small" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>